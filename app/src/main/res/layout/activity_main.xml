<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="40dp"
        android:text="User Name"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:layout_y="32dp"
        android:hint="   enter your name"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="42dp"
        android:layout_y="90dp"
        android:text="Password"

        android:textSize="20sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="172dp"
        android:layout_y="88dp"
        android:hint="   enter your password"
        android:inputType="textPassword"
        android:textColor="@color/teal_200"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="58dp"
        android:layout_y="221dp"
        android:text="Address"
        android:textSize="20sp"


        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="146dp"
        android:layout_y="222dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="60dp"
        android:layout_y="164dp"
        android:text="Gender"
        android:textSize="20sp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="276dp"
        android:text="Faculty"
        android:textSize="20sp"


        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="149dp"

        android:layout_y="268dp"
        android:text="BCA" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="236dp"

        android:layout_y="270dp"
        android:text="BBA" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_x="148dp"
        android:layout_y="152dp"
        android:text="Male" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_x="242dp"
        android:layout_y="153dp"
        android:text="Female" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_x="31dp"
        android:layout_y="392dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="286dp"

        android:layout_y="666dp"
        android:backgroundTint="#7A711C"
        android:text="Login"

        />


</AbsoluteLayout>